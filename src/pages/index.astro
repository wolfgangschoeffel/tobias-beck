---
import "../styles/global.css";
import { Font } from "astro:assets";
import { Image } from "astro:assets";
import imageRogacki from "../img/smoked-fish-on-a-tray-at-fish-market-rogacki-in-berlin.webp";
import imageFleischerei from "../img/traditional-butcher-shop-front-view.webp";
import cloudy1 from "../img/video-still-of-tobias-beck-inside-of-a-traditional-butcher-shop-tasting-a-meat-ball-1.webp";
import cloudy2 from "../img/video-still-of-tobias-beck-inside-of-a-traditional-butcher-shop-tasting-a-meat-ball-2.webp";
import brezel from "../img/detail-shot-of-a-pretzel-hanging-from-a-wooden-stand.webp";
import imageTobiBallhaus from "../img/tobias-beck-at-claerchens-ballhaus-in-berlin.webp";
import imageDoor from "../img/old-open-wooden-door.webp";
import { SITE_URL } from "../utils/constants";

const META_DESCRIPTION =
  "Tobias Beck is a Berlin-based chef and culinary innovator who is shaping todays and tomorrows culture through his passion for fire-based cooking and a deep appreciation for German cuisine";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Tobias Beck</title>
    <meta name="description" content={META_DESCRIPTION} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={SITE_URL} />
    <meta property="og:title" content="Tobias Beck" />
    <meta property="og:description" content={META_DESCRIPTION} />
    <meta property="og:image" content={`${SITE_URL}/og-image.webp`} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={SITE_URL} />
    <meta property="twitter:title" content="Tobias Beck" />
    <meta property="twitter:description" content={META_DESCRIPTION} />
    <meta property="twitter:image" content={`${SITE_URL}/og-image.webp`} />
    <Font cssVariable="--font-arimo" preload />

    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- Structured Data for SEO -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Tobias Beck",
        "jobTitle": "Executive Chef",
        "description": "Berlin-based chef and culinary innovator shaping today's and tomorrow's culture through fire-based cooking and German cuisine",
        "url": "https://tobias-beck.com",
        "sameAs": [
          "https://www.instagram.com/tobiasbeck__/",
          "https://vimeo.com/794683775"
        ],
        "worksFor": {
          "@type": "Organization",
          "name": "Clärchens Ballhaus",
          "url": "https://claerchensball.haus/"
        },
        "founder": [
          {
            "@type": "Organization",
            "name": "Ember, Open Fire Cooking",
            "url": "https://ember-ofc.com/"
          },
          {
            "@type": "Organization",
            "name": "Gutgeist Magazin",
            "url": "https://www.instagram.com/gut_geist/"
          }
        ],
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Berlin",
          "addressCountry": "DE"
        },
        "knowsAbout": [
          "German Cuisine",
          "Fire-based Cooking",
          "Culinary Innovation",
          "Neue deutsche Küche"
        ]
      }
    </script>
  </head>
  <body>
    <header class="relative">
      <Image
        src={imageFleischerei}
        alt="Frontal view of a traditional butcher shop"
        loading="lazy"
        layout="constrained"
        class="fade-in-image w-full max-md:h-[33vh] max-md:object-cover"
        tabindex="0"
      />

      <div
        class="pointer-events-none absolute top-0 left-0 flex h-full w-full items-center justify-center text-center text-white"
      >
        <div>
          <h1 class="text-[max(10vw,48px)] leading-none font-bold">
            Tobias Beck
          </h1>
          <p class="text-[max(16px,1.5vw)]">
            <span class="stagger-fade-in" style="animation-delay: 0.5s;"
              >Chef</span
            >
            <span class="stagger-fade-in" style="animation-delay: 0.55s;">
              –
            </span>
            <span class="stagger-fade-in" style="animation-delay: 0.6s;"
              >Taste Maker</span
            >
            <span class="stagger-fade-in" style="animation-delay: 0.65s;">
              –
            </span>
            <span class="stagger-fade-in" style="animation-delay: 0.7s;"
              >Creator</span
            >
            <span class="stagger-fade-in" style="animation-delay: 0.75s;">
              –
            </span>
            <span class="stagger-fade-in" style="animation-delay: 0.8s;"
              >Author</span
            >
          </p>
        </div>
      </div>
    </header>

    <main>
      <section class="grid grid-cols-2">
        <figure>
          <Image
            src={cloudy1}
            alt="Video Still of Tobias Beck inside of a traditional butcher shop tasting a meat ball."
            loading="lazy"
            layout="constrained"
            class="fade-in-image w-full"
            tabindex="0"
          />
        </figure>

        <figure>
          <Image
            src={cloudy2}
            alt="Video Still of Tobias Beck inside of a traditional butcher shop tasting a meat ball."
            loading="lazy"
            layout="constrained"
            class="fade-in-image w-full"
            tabindex="0"
          />
        </figure>
      </section>

      <figure>
        <Image
          src={imageRogacki}
          alt="Detail shot of smoked fish on a tray at fish market Rogacki in Berlin"
          loading="lazy"
          layout="constrained"
          class="fade-in-image mb-2 w-full max-md:h-[33vh] max-md:object-cover md:mb-3"
          tabindex="0"
        />
      </figure>

      <section class="group relative mb-2 md:mb-3">
        <figure>
          <Image
            src={brezel}
            alt="Detail shot of a Pretzel hanging from a wooden stand"
            loading="lazy"
            layout="full-width"
            class="w-full"
            tabindex="0"
          />
          <figcaption class="sr-only">
            Traditional German pretzel hanging from a wooden stand
          </figcaption>
        </figure>

        <article
          class="absolute top-0 left-0 flex w-full justify-center px-[50px] pt-[50px] text-center text-[30px] leading-[1.2]"
        >
          <h2 class="sr-only">About Tobias Beck</h2>
          <p class="max-w-[25em] text-[max(16px,3vw)]">
            A Berlin-based chef and culinary innovator who is shaping todays and
            tomorrows culture through his passion for fire-based cooking and a
            deep appreciation for German cuisine
          </p>
        </article>
      </section>

      <section class="relative mb-2 flex items-center justify-center md:mb-3">
        <h2
          class="absolute top-0 left-0 z-10 w-full pt-[50px] text-center text-[max(24px,4vw)]"
        >
          Neue deutsche küche
        </h2>
        <figure>
          <Image
            src={imageDoor}
            alt="A old-school open wooden Door"
            loading="lazy"
            layout="full-width"
            class="w-full"
            tabindex="0"
          />
          <figcaption class="sr-only">
            Traditional wooden door representing German heritage
          </figcaption>
        </figure>

        <div class="group absolute w-[38%]">
          <figure>
            <Image
              src={imageTobiBallhaus}
              alt="Tobias Beck wearing a chef's outfit standing in front of the kitchen of Claerchens Ballhaus in Berlin"
              loading="lazy"
              layout="constrained"
              class="fade-in-image w-full"
              tabindex="0"
            />
            <figcaption class="sr-only">
              Tobias Beck at Claerchens Ballhaus in Berlin
            </figcaption>
          </figure>
        </div>
      </section>

      <section class="bg-black px-[50px] py-[100px] text-center">
        <h2 class="sr-only">Professional Experience</h2>
        <p class="text-[max(13px,1.5vw)]">
          Executive Chef – <a
            href="https://www.instagram.com/luna.claerchens/"
            target="_blank"
            class="transition-opacity hover:opacity-60">Clärchens</a
          >
          <a
            class="transition-opacity hover:opacity-60"
            href="https://claerchensball.haus/"
            target="_blank">Ballhaus</a
          ><br />
          Founder – <a
            href="https://ember-ofc.com/"
            target="_blank"
            class="transition-opacity hover:opacity-60"
            >Ember, Open Fire Cooking</a
          ><br />
          Founder & Editor-in-Chief – <a
            href="https://www.instagram.com/gut_geist/?hl=en"
            target="_blank"
            class="transition-opacity hover:opacity-60">Gutgeist Magazin</a
          > – <a
            href="https://faremag.com/products/gut-geist-the-berlin-issue?srsltid=AfmBOoq5LFLh6m9mO5RpkPXXKSijfX_cy7nben463CG15aLFrJgATYdM"
            target="_blank"
            class="transition-opacity hover:opacity-60">Buy</a
          ><br />
          Creator & Author – Deutschland, Dein Essen (Documentary, <time
            datetime="2024">coming soon</time
          >)
        </p>
      </section>
    </main>

    <footer
      class="mb-2 flex flex-col gap-[25vh] bg-black px-[50px] py-[50px] text-[max(13px,1.5vw)] md:mb-3"
    >
      <nav class="flex flex-wrap gap-[0.75em] max-md:justify-center">
        <a
          class="transition-opacity hover:opacity-60"
          href="https://www.instagram.com/tobiasbeck__/"
          target="_blank">Instagram</a
        >
        <a
          class="transition-opacity hover:opacity-60"
          href="https://vimeo.com/794683775"
          target="_blank">Vimeo</a
        >
        <a
          class="transition-opacity hover:opacity-60"
          href="https://apps.apple.com/us/app/creme-create-memorable-meals/id1638361026"
          target="_blank">App</a
        >

        <span class="group relative md:ml-auto">
          <a
            href="mailto:Jessica@gut-geist.com?subject=I%27m%20interested%20in%20collaborating%20with%20you"
            class="transition-opacity hover:opacity-60">Collaborations</a
          >
          <span
            class="pointer-events-none absolute bottom-full z-10 border-[1px] border-white/20 bg-black px-2 py-1 text-xs tracking-wider whitespace-nowrap text-white opacity-0 shadow-lg transition-opacity duration-200 group-hover:opacity-100 max-md:right-0 md:left-1/2 md:-translate-x-1/2"
            >For exclusive collaborations<br /> and professional inquiries: <br
            />
            Jessica@gut-geist.com</span
          >
        </span>
        <span class="group relative">
          <a
            class="transition-opacity hover:opacity-60"
            href="mailto:hello@gut-geist.com?subject=Contact%20from%20Website"
            >contact</a
          >
          <span
            class="pointer-events-none absolute right-0 bottom-full z-10 border-[1px] border-white/20 bg-black px-2 py-1 text-xs tracking-wider whitespace-nowrap text-white opacity-0 shadow-lg transition-opacity duration-200 group-hover:opacity-100"
            >For general inquiries<br />and questions: <br />
            hello@gut-geist.com</span
          >
        </span>
      </nav>
      <section class="flex flex-col gap-[0.75em]">
        <h2 class="flex justify-center">Impressum</h2>
        <address class="text-center text-[12px] text-white/50 not-italic">
          <p class="mr-[10px] md:inline md:whitespace-nowrap">
            <span class="text-white/75">Angaben gemäß § 5 TMG</span> Beck Culinary
            Arts Group UG – Wiener Straße 10 – 10999 Berlin
          </p>
          <p class="mr-[10px] md:inline md:whitespace-nowrap">
            <span class="text-white/75">Geschäftsführer</span> Tobias Beck
          </p>
          <p class="mr-[10px] md:inline md:whitespace-nowrap">
            <span class="text-white/75">Umsatzsteuer-ID</span> DE455095255
          </p>
          <p class="mr-[10px] md:inline md:whitespace-nowrap">
            <span class="text-white/75">Handelsregister</span> HRB 272425 B
          </p>

          <p class="mr-[10px] md:inline md:whitespace-nowrap">
            <span class="text-white/75">FOTO CREDITS:</span>
            Nino Valpiani, Jonas Kolahdoozan, Jose Cuevas
          </p>
        </address>
      </section>
    </footer>
    <figure>
      <video
        src="/tobias-beck-collecting-herbs.mp4"
        autoplay
        muted
        playsinline
        loop
        class="fade-in-image w-full"
        tabindex="0"
      >
      </video>
      <figcaption class="sr-only">
        Tobias Beck collecting herbs in nature
      </figcaption>
    </figure>

    <script>
      const targets = Array.from(document.querySelectorAll(".fade-in-image"));
      function callback(
        entries: IntersectionObserverEntry[],
        observer: IntersectionObserver,
      ) {
        entries.forEach((entry: IntersectionObserverEntry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("fade-in");
          }
        });
      }
      const observer = new IntersectionObserver(callback, {
        threshold: 0,
        rootMargin: "0px 0px -25% 0px",
      });
      targets.forEach((target) => {
        observer.observe(target);
      });
    </script>
  </body>
</html>
